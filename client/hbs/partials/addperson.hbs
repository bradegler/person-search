<div id="openModal" class="modalbg">
  <div class="dialog">
    <a href="#close" title="Close" class="close">X</a>
    <h2>Add Person</h2>
    <form class="form-horizontal" role="form" action="/api/person" method="post">
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <input type="text" class="form-control input-sm" name="firstName" id="inputFirstName" placeholder="First Name"> 
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <input type="text" class="form-control input-sm" name="lastName" id="inputLastName" placeholder="Last Name">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <input type="tel" class="form-control input-sm" name="phone" id="inputPhone" pattern="\d{3}[\-]\d{3}[\-]\d{4}" placeholder="Phone xxx-xxx-xxxx">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <input type="date" class="form-control input-sm" name="dob" id="inputDob" placeholder="Date of Birth">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <input type="text" class="form-control input-sm" name="addLine" id="inputAddLine" placeholder="Address">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-4">
          <input type="text" class="form-control input-sm" name="addCity" id="inputCity" placeholder="City">
        </div>
        <div class="col-sm-3">
          <select class="form-control input-sm" name="addState" id="inputState" placeholder="State">
          {{#each ./states}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
          </select>
        </div>
        <div class="col-sm-3">
          <input type="text" class="form-control input-sm" name="addZip" id="inputZip" placeholder="Zip">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <button type="submit" class="btn btn-success">Save</button>
        </div>
        <div class="col-sm-offset-3 col-sm-2">
          <a href="#close" class="btn btn-danger">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>